@model IEnumerable<PayrollBSI.BLL.DTO.PayrollDetailsDTO>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* CSS Styling */
        .create-button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none; /* Remove default anchor underline */
            display: inline-block; /* Ensure the button behaves like a block element */
            margin-bottom: 20px; /* Add margin at the bottom of the button */
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        /* Responsive Table Styling */
        .table-container {
            overflow-x: auto;
            border: 1px solid #ccc; /* Add border to the table container */
            border-radius: 5px; /* Add border radius */
            margin-bottom: 20px; /* Add margin at the bottom of the table container */
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            position: sticky;
            top: 0;
        }
    </style>

</head>
<body>
    <h1>Payroll Details</h1>
    <!-- Create Button -->
    <a href="@Url.Action("Create", "PayrollDetails")" class="create-button">Create</a>

    <!-- Table Container for Responsive Behavior -->
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Payroll Date</th>
                    <th>Total Allowances</th>
                    <th>Total Deductions</th>
                    <th>Gross Pay</th>
                    <th>Net Pay (No Tax)</th>
                    <th>Net Pay (With Tax)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeName</td>
                        <td>@item.PayrollDate.ToShortDateString()</td>
                        <td>@item.TotalAllowances</td>
                        <td>@item.TotalDeductions</td>
                        <td>@item.GrossPay</td>
                        <td>@item.NetPayNoTax</td>
                        <td>@item.NetPayWithTax</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
